@model FiorelloClone.Models.Product

<section class="container py-5">
    <a asp-controller="Product" asp-action="Index" class="btn btn-link p-0 mb-3">
        ← Back to Shop List
    </a>

    <div class="row">
        <div class="col-md-6">
            @{
                var mainImg = Model.ProductImages?.FirstOrDefault(x => !x.IsDeleted && x.IsMain)?.Image;
            }

            @if (!string.IsNullOrWhiteSpace(mainImg))
            {
                <img src="~/img/@mainImg" class="img-fluid" alt="@Model.Name" />
            }
            else
            {
                <div class="border p-5 text-center">No Image</div>
            }

            <div class="d-flex flex-wrap gap-2 mt-3">
                @foreach (var img in Model.ProductImages.Where(x => !x.IsDeleted))
                {
                    <img src="~/img/@img.Image" style="width:90px;height:90px;object-fit:cover;" alt="" />
                }
            </div>
        </div>

        <div class="col-md-6">
            <h2>@Model.Name</h2>
            <p class="text-muted mb-1">Category: @(Model.Category?.Name ?? "No category")</p>
            <h4 class="mt-3">@Model.Price</h4>

            <button type="button" class="add-to-cart btn btn-dark mt-3" data-id="@Model.Id">
                Add to cart
            </button>
        </div>
    </div>
</section>

<script src="~/js/customBasketAdd.js"></script>
