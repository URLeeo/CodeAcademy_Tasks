@model UpdateSliderVM

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Slider Update</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">

                <!-- NAME -->
                <div class="form-group">
                    <img width="200px" height="200px" src="~/img/@Model.Image" />
                    <input asp-for="Photo" class="form-control" id="exampleInputName1" placeholder="Name" style="margin-top:10px">
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>

                <!-- BUTTONS -->
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <a class="btn btn-light" asp-action="Index">Back</a>

            </form>

        </div>
    </div>
</div>